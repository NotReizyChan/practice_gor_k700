<Page x:Class="practice_gor_k700.PartsInfoClick"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice_gor_k700"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartsInfoClick">

    <Grid>
        <DataGrid AutoGenerateColumns="False" x:Name="InfoGrid" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер в списке" Binding="{Binding id}" Width="*"/>
                <DataGridTextColumn Header="Название" Binding="{Binding title}" Width="*"/>
                <DataGridTextColumn Header="количество" Binding="{Binding count}" Width="*"/>
                <DataGridTextColumn Header="цена в рублях" Binding="{Binding cost}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
