<Page x:Class="practice_gor_k700.SvodPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice_gor_k700"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SvodPage">

    <Grid>
        <DataGrid x:Name="datagridSvod" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Клиент" Width="*" Binding="{Binding Client}"/>
                <DataGridTextColumn Header="Оборудование" Width="*" Binding="{Binding Device}"/>
                <DataGridTextColumn Header="Закрепленный мастер" Width="*" Binding="{Binding Worker}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
